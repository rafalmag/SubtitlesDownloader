<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.rafalmag.subtitledownloader.gui.FXMLOsLoginController">
    <children>
        <VBox alignment="CENTER">
            <children>
                <GridPane alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="100"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS"/>
                        <RowConstraints vgrow="ALWAYS"/>
                    </rowConstraints>
                    <children>
                        <Label text="%Login" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="loginField" prefWidth="150.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="0"/>
                        <Label text="%Password" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <PasswordField fx:id="passwordField" prefWidth="150.0" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </GridPane>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button onAction="#register" mnemonicParsing="false" prefWidth="120" text="%Register"/>
                        <Button onAction="#okAction" mnemonicParsing="false" prefWidth="80" text="%Ok"
                                defaultButton="true"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
