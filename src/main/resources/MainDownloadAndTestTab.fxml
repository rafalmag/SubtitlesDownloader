<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Tab fx:id="downloadAndTestTab" text="Download and Test" xmlns:fx="http://javafx.com/fxml"
     fx:controller="pl.rafalmag.subtitledownloader.gui.FXMLMainDownloadAndTestTabTabController">
    <VBox>
        <GridPane VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="download" onAction="#download" text="Download" GridPane.columnIndex="0"
                    GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER"/>
            <Button fx:id="test" onAction="#test" text="Test" GridPane.columnIndex="0"
                    GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
            <Button fx:id="downloadAndtest" onAction="#downloadAndTest" text="Download  &amp; Test"
                    GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2"
                    GridPane.valignment="CENTER"/>
            <Button fx:id="markValid" onAction="#markValid" text="Mark subtitles as valid"
                    GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3"
                    GridPane.valignment="CENTER"/>
        </GridPane>
        <Label fx:id="status" alignment="BOTTOM_LEFT" prefWidth="500.0" VBox.vgrow="SOMETIMES"/>
    </VBox>
</Tab>
